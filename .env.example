# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Database Configuration
# PostgreSQL (권장) - 비동기 사용 시 asyncpg 드라이버 필요
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/stocksense

# SQLite (개발용) - 비동기 사용 시 aiosqlite 드라이버 필요
# DATABASE_URL=sqlite+aiosqlite:///./stocksense.db

# 동기 버전 (참고)
# DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/stocksense

# Stock API Keys (optional - yfinance는 무료)
ALPHA_VANTAGE_API_KEY=your_api_key_here
FINNHUB_API_KEY=your_api_key_here

# Korea Investment & Securities API
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_ACCOUNT_NUMBER=your_account_number_here
KIS_ACCOUNT_PRODUCT_CODE=01
KIS_BASE_URL=https://openapi.koreainvestment.com:9443
KIS_USE_MOCK=True
KIS_CUST_TYPE=P

# Redis Configuration (optional - for token caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Model Configuration
MODEL_PATH=./models
DATA_PATH=./data

# Logging
LOG_LEVEL=INFO
